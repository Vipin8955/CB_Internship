<div class="impDetails">
            <section class="payment">
                <button class="addtocartBtn" productId="{{this.product._id}}">Add to Cart</button>
                <button class="buynowBtn">Buy Now</button>
            </section>
            <section class="reviews">
                <button class="writeReview">Write a Review</button>
                <div class="inputReview hide">
                    <input type="text" class="title" placeholder="Enter title"><br>
                    <textarea class="description" placeholder="Enter description..."></textarea><br>
                    <input type="hidden" class="productId" value="{{product._id}}"><br>
                    <button class="submitReviewBtn">Post Review</button>
                </div>
                <h4>Latest Reviews</h4>
                <ul class="reviewsList">
                    {{#each this.product.reviews as |review|}}
                    <li class="reviewListItem">
                        <div class="reviewTitle">Title:{{review.title}}</div>
                        <div class="reviewDescription">Description:{{review.description}}</div>
                    {{#if ../isAdmin}}
                       <button class="deleteReviewBtn"><a href="/admin/deletereview?id={{review._id}}&productId={{../product._id}}">Delete</a></button>
                    {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </section>
 </div>